<h1>Add A New Restaurant</h1>

<%= form_for(@restaurant) do |r| %>
  <%= r.label :name %>
  <%= r.text_field :name %>
  <%= r.label :phone %>
  <%= r.text_field :phone_number %>
  <%= r.label :address %>
  <%= r.text_field :address %>
  <%= r.label :category %>
  <%= r.text_field :category %>
  <%= r.submit %>
<% end %>

 <button type="button" class="btn btn-default">
 <%= link_to("Back to Restaurant List", restaurants_path) %>
 </button>
