<h1>Add A New Review</h1>

<%= simple_form_for [ @restaurant, @review ] do |r| %>
  <%= r.input :rating %>
  <%= r.input :content %>
  <%= r.submit "Submit review", class: "btn btn-primary" %>
<% end %>

 <button type="button" class="btn btn-default">
 <%= link_to("Back to Restaurant List", restaurants_path) %>
